@model IEnumerable<Hikaya.DAL.SavedStory>
    @using Hikaya.Resources
@using Hikaya.DAL
@using Hikaya.Helpers

@{
    ViewBag.Title =StoryResourcesArabic.SavedStory;
}

<h2>@ViewBag.Title</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            @StoryResourcesArabic.UserId
            @*@Html.DisplayNameFor(model => model.UserId)*@
        </th>
        <th>
            @StoryResourcesArabic.StoryId
            @*@Html.DisplayNameFor(model => model.StoryId)*@
        </th>
        <th>
            @StoryResourcesArabic.Date
            @*@Html.DisplayNameFor(model => model.Date)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @UserHelper.GetUserNameById(item.UserId)
            @*@Html.DisplayFor(modelItem => item.UserId)*@
        </td>
        <td>
            @item.StoryId
            @*@Html.DisplayFor(modelItem => item.StoryId)*@
        </td>
        <td>
            @(item.Date.HasValue?item.Date.Value.ToString("dd/MM/yyyy hh:mm tt"):"")
            @*@Html.DisplayFor(modelItem => item.Date)*@
        </td>
        <td>
            @Html.ActionLink(StoryResourcesArabic.Details, "Details", new { id = item.Id }, new {@class="btn btn-primary" })
            @Html.ActionLink(StoryResourcesArabic.Delete, "Details", new { id = item.Id }, new { @class = "btn btn-danger" })
            @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>
