@model IEnumerable<Hikaya.DAL.FeedbackMessage>
@using Hikaya.Resources
@using Hikaya.DAL
@using Hikaya.Helpers
@{
    ViewBag.Title = SahredResourcesArabic.Inbox;
}


<h2>@ViewBag.Title</h2>
@foreach (var item in Model)
{
    <div class="message-item">
        <h3>@item.Story.Title</h3>
        <span class="message-date">
            @(item.Date.HasValue? item.Date.Value.ToString("dd/MM/yyyy"): "")
        </span>
        <p>@item.Text</p>
        <div class="message-sender">
            @UserHelper.GetUserNameById(item.UserId)
        </div>


    </div>
}

